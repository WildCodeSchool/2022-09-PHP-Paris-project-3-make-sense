<div class="container-fluid d-flex mt-5 justify-content-center">
	<div class="card style-shadow col-8">
		<div class="">

			<div class="card-header thumb-position">
				<div class="fs-4 mt-4 ms-2 mb-4">
					{% include 'partials/_status-button.html.twig' with { 'status' : decision.status } %}
				</div>

				<div>
					<h1 class="mt-4">Donnez votre avis</h1>
				</div>
				<div class="mt-4 mb-4 text-black">
					<div class="me-3">
						{% include 'partials/_like-button.html.twig' with { 'decision' : decision } %}
					</div>
				</div>
			</div>

			<div class="card-body title-decision card-body mx-2 p-1">

				<div class="d-flex">
					<div class="col-8">

						<div class="ms-3 fs-3 mt-3">{{ decision.title}}</div>

						<div class="date-decision fs-4 ms-3">
							<small>cr√©e le
								<small>{{decision.createdAt | date('d/m/Y')}}</small>
							</small>
						</div>

						<div class="mx-3">
							<div class="">
								{% if decision.owner.poster is not empty %}
									<img class="ms-2 profil-photo" src="{{ vich_uploader_asset(decision.owner, 'posterFile') }}" alt="">
								{% else %}
									<i class="fs-5 rounded-4 bg-light p-3 fa-regular fa-user"></i>
								{% endif %}
								<a class="ms-2 text-decoration-none text-muted">{{decision.owner.firstname}}
									{{decision.owner.lastname}}</a>
							</div>
						</div>
					</div>

					<div class="col-4 d-flex justify-content-center align-items-center">
						<div class="d-flex flex-column justify-content-end col-5 align-items-center">
							<div class="fs-4">Votre avis</div>
							{% if opinion.isIslike() == "true" %}
								<div id="likeLogoId" class="fs-2 p-2 border card-bg-color text-white fa-regular fa-thumbs-up like"></div>
							{% else %}
								<div id="likeLogoId" class="p-2 btn border card-bg-color text-white  fs-2 fa-regular fa-thumbs-down dislike"></div>
							{% endif %}
						</div>

					</div>
				</div>
				<div class="mt-5">
					{{ form_start(form) }}

					{{ form_row(form.isLike) }}

					<div class="mx-3">
						{{ form_widget(form.message) }}
					</div>

					<div class="mt-3 mb-3 text-center">
						{{ form_widget(form.submit, { 'label' : 'Soumettre'}) }}
					</div>
					{{ form_end(form) }}
				</div>


			</div>

		</div>
	</div>
</div>
