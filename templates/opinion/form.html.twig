<div class="container-fluid">
	<div class="row mt-5">
		<div class="d-flex justify-content-center m-0 p-0">
			<div class="col-8">
				<div class="card border-dark mb-3">
					<div class="card-header fs-3 card-bg-color text-white d-flex justify-content-between">
						<div class="d-flex align-items-center">
							<div class="fs-4">Status :
							</div>
							{% if decision.status == (constant('App\\Entity\\Decision::STATUS_CONFLICT')) %}
								<div class="ms-4 text-white fs-6 bg-danger pb-1 pe-3 ps-3 rounded-5">
								{% else %}
									<div class="ms-4 text-white fs-6 bg-success pb-1 pe-3 ps-3 rounded-5">
									{% endif %}
									<small>{{ constant('App\\Entity\\Decision::STATUSES')[decision.status] }}</small>
								</div>
							</div>
							<div>
								<div>
									<i class="fs-5 fa-regular fa-thumbs-up"></i>
									<span class="fs-5">({{ calculateOpinion(decision).like }})</span>
								</div>
								<div>
									<i class="fs-5 fa-regular fa-thumbs-down"></i>
									<span class="fs-5">({{ calculateOpinion(decision).dislike }})</span>
								</div>
							</div>
						</div>
						<div class="card-body m-0 p-0 mt-2">
							<div class="d-flex justify-content-between align-items-center">
								<div class="col-8">
									<div class="ms-4 mt-2 fs-3">
										{{ decision.title}}
									</div>
									<div class="ms-4 mt-2 fs-3">
										{% if decision.owner.poster is not empty %}
											<img class="ms-2 profil-photo" src="{{ asset('build/images/' ~ decision.owner.poster) }}" alt="">
										{% else %}
											<i class="fs-5 p-2 rounded-5 bg-secondary fa-regular fa-user"></i>
										{% endif %}
										<span class="fs-6 ms-3">
											par
											{{ decision.owner.firstname }}
											{{ decision.owner.lastname }}
										</span>
									</div>
								</div>
								<div class="d-flex flex-column justify-content-end col-4 align-items-end">
									<p class="me-4">Votre avis</p>
									{% if opinion.isIslike() == "true" %}
										<div id="likeLogoId" class="me-5 fa-regular fa-thumbs-up like"></div>
									{% else %}
										<div id="likeLogoId" class="me-5 fa-regular fa-thumbs-down dislike"></div>
									{% endif %}
								</div>
							</div>
							<div class="col-12 d-flex justify-content-center">
								<h1 class="mt-5 mb-5">Donner votre avis</h1>
							</div>
							<div>
								{{ form_start(form) }}

								{{ form_row(form.isLike) }}
								{{ form_row(form.message) }}
								<div class="text-center">
									{{ form_widget(form.submit, { 'label' : 'Soumettre'}) }}
								</div>
								{{ form_end(form) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
