<div class="decision-card card style-shadow mt-5 col-12" style="">

		<div class="card-header fs-4 text-dark d-flex justify-content-between align-items-center">
			<div>
				{{ title }}
			</div>
			<div class="fs-6">
				{% include 'partials/_status-button.html.twig' with { 'status' : status } %}
			</div>
		</div>

	<div class="card-body m-0 p-0">
		{% if decisions is not empty  %}
			{% for decision in decisions %}

				<div class="d-flex ms-4 mt-2 mb-2">
					<div class="col-8">
						{% if decision.status != constant('App\\Entity\\Decision::STATUS_DRAFT') %}
							<a class="text-dark fs-5 text-decoration-none" 
								href="{{ path('app_decision_show', { 'decision_id' : decision.id})}}">
								{{ decision.title}}
							</a>
						{% else %}
							<a class="text-dark fs-5 text-decoration-none" 
									href="{{ path('app_decision_edit', {'decision_id' : decision.id})}}">
								{{ decision.title}}
							</a>
						{% endif %}
							<div class="row date-decision fs-5">
								<small>cr√©e le
								<small>{{decision.createdAt | date('d M Y')}} par 
									{{decision.owner.firstname}}{{decision.owner.lastname}}</small>
								</small>
							</div>
				 	</div>

					 <div class="col-4 d-flex align-items-center">
					 		{% include 'partials/_like-button.html.twig' with { 'decision' : decision } %}
					 </div>

				</div>

					{% if loop.index0 < (decisions|length-1) %}
						<div class="border border-3 border-light mx-3"></div>
					{% else %}
						<div class="mb-3"></div>
					{% endif %}

			{% endfor %}
		{% endif %}
	</div>
</div>
