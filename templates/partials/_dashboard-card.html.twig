<div class="card border-dark rounded-3 mb-4" style="width: 50rem;">
	<div class="card-header fs-4 text-center card-bg-color text-white">{{ title }}</div>
	<div class="card-body m-0 p-0">
		{% if decisions is not empty  %}
			{% for decision in decisions %}
				<div class="d-flex justify-content-between align-items-center border-bottom border-dark">
					<div class="d-flex align-items-center mt-2 mb-2 w-75">
						<div>
							<i class="fs-5 rounded-4 bg-light p-3 fa-regular fa-user"></i>
						</div>
						<div class="ms-2">
							{% if decision.status != constant('App\\Entity\\Decision::STATUS_DRAFT')%}
								<a class="text-decoration-none" href="{{ path('app_decision_show', { 'decision_id' : decision.id})}}">
									{{ decision.title  }}
								</a>
							{% else %}
								<a class="text-decoration-none" href="{{ path('app_decision_edit', { 'decision_id' : decision.id})}}">
									{{ decision.title  }}
								</a>
							{% endif %}
						</div>
					</div>
					{% if decision.status != constant('App\\Entity\\Decision::STATUS_DRAFT') %}
						<div class="me-3">
							{% include 'partials/_like-button.html.twig' with { 'decision' : decision } %}
						</div>
					{% endif %}
				</div>
			{% endfor %}
		{% endif %}
	</div>
</div>
