<div class="container-fluid">
	<h2 class="mt-5 text-white text-center">Liste des notifications</h2>
	<div class="row mt-5 d-flex justify-content-center ms-3 me-3">
		<div class="col-12">
			<table class="table table-striped table-bordered bg-grey-light">
				<thead class="">
					<tr class="text-dark fs-5">
						<th class="col-4 text-center">Décision</th>
						<th class="col-3 text-center">Message</th>
						<th class="col-2 text-center">Status</th>
						<th class="col-2"></th>
					</tr>
				</thead>
				<tbody class="">
					<form method="POST">
						{% for notification in notifications %}
							<tr class="bg-white">
								<td class="">
									<button class="text-start fs-5 btn btn-link text-dark text-decoration-none" type="submit" name={{constant('App\\Entity\\Notification::STATUS_SHOW')}} value={{ notification[0].id }}>
										{{ notification[0].title }}
									</button>
									<div class="d-flex align-items-center">
										<div>
											{% if notification[0].owner.poster != "" %}
												<img class="rounded-5" src="{{ vich_uploader_asset(notification[0].owner, 'posterFile') }}" style="height:45px; width:45px" alt="..">
											{% else %}
												<i class="fs-5 rounded-4 bg-light p-3 fa-regular fa-user"></i>
											{% endif %}
										</div>
										<div class="row date-decision fs-5 ms-1">
											<small>crée le
												<small>{{notification[0].createdAt | date('d M Y')}}
													par
													{{notification[0].owner.firstname}}{{notification[0].owner.lastname}}</small>
											</small>
										</div>
									</div>
								</td>

								<td class="col-4" style="padding-top : 35px">
									{{ constant('App\\Entity\\Notification::NOTIFICATIONS_MESSAGE')[notification[0].status]}}
								</td>

								<td class="col-1" style="padding-top : 40px">
									{% include 'partials/_status-button.html.twig' with 
										{
											'status': notification[0].status, 
										} 
									%}

								</td>
								<td class="col-1 text-center" style="padding-top : 35px">
									{% include 'notification/button.html.twig' %}

								</td>
							</tr>
						{% endfor %}
					</tr>
				</tbody>
			</form>
		</tbody>
	</tbody>
</table>

<div class="mt-5 navigation d-flex justify-content-center">
	{{ knp_pagination_render(notifications) }}
</div></div></div></div>
