{% extends 'base.html.twig' %}

{% block title %}Expertise index{% endblock %}

{% block body %}
    <h1>Expertise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Department</th>
                <th>IsExpert</th>
            </tr>
        </thead>
        <tbody>
        {% for expertise in expertises %}
            <tr>
                <td>{{ expertise.id }}</td>
                <td>{{ expertise.user.email }}</td>
                <td>{{ expertise.department.name }}</td>
                <td>{{ expertise.isExpert ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_expertise_show', {'id': expertise.id}) }}">show</a>
                    <a href="{{ path('app_expertise_edit', {'id': expertise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_expertise_new') }}">Create new</a>
{% endblock %}
