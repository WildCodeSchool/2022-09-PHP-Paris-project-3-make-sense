<div class="container-fluid">
	<div class="row mt-5">
		<div class="d-flex justify-content-center m-0 p-0">
			<div class="col-8">
				<div class="card border-dark mb-3">
					<div class="card-header fs-3 card-bg-color text-white d-flex justify-content-between">
						<div class="mt-2">
							Status :
							{{ decision.status }}
							<p class="fs-6">deadline :
								{{ decision.end_at | date("d/m/Y") }}</p>
						</div>

						<div>
							<div>
								<img class="like" src="{{ asset('build/images/thumbs-up-regular.png') }}">
								<span class="fs-5">({{ opinionLike.like }})</span>
							</div>
							<div>
								<img class="like" src="{{ asset('build/images/thumbs-down-regular.png') }}">
								<span class="fs-5">({{ opinionLike.dislike }})</span>
							</div>
						</div>
					</div>
					<div class="card-body m-0 p-0 mt-2">
						<div class="d-flex justify-content-between align-items-center">

							<div class="col-8">
								<div class="ms-4 mt-2 fs-3">
									{{ decision.title}}
								</div>
								<div class="ms-4 mt-2 fs-3">
									<img class="ms-2 profil-photo" src="{{ asset('build/images/user.jpg') }}">
									<span class="fs-6 ms-3">
										par
										{{ user.firstname }}
										{{ user.lastname }}
										le
										{{ decision.created_at | date("d/m/Y") }}
									</span>
								</div>
							</div>


						</div>
						<div class="col-12 d-flex justify-content-center">
							<h1 class="mt-5 mb-5">Avis de l'expert</h1>
						</div>

						<div>

							{{ form_start(form) }}

							{{ form_row(form.comment) }}

							<div class="d-flex justify-content-between align-items-center">
								<div class="w-100 text-center">
									{{ form_row(form.avispositif, { 'label': 'avis positif' }) }}
								</div>

								<div class="w-100 text-center">
									{{ form_row(form.avisnegatif, { 'label': 'avis n√©gatif' }) }}
								</div>
							</div>
							{{ form_end(form) }}
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
