<div class="container-fluid">
	<div class="row mt-5">
		<div class="d-flex justify-content-center m-0 p-0">
			<div class="col-8">
				<div class="card border-dark mb-3">
					<div class="card-header fs-3 card-bg-color text-white d-flex justify-content-between">
						<div class="d-flex align-items-center">
							<div class="fs-4 me-4">Status :</div>
							{% if decision.status == (constant('App\\Entity\\Decision::STATUS_CONFLICT')) %}
								<div class="ms-4 text-white fs-6 bg-danger pb-1 pe-3 ps-3 rounded-5">
								{% else %}
									<div class="ms-4 text-white fs-6 bg-success pb-1 pe-3 ps-3 rounded-5">
									{% endif %}
									<small>{{ constant('App\\Entity\\Decision::STATUSES')[decision.status] }}</small>
								</div>
							</div> 
							
						</div>

						<div class="card-body m-0 p-0 mt-2">
							<div class="d-flex justify-content-between align-items-center">
								<div class="col-8">
									<div class="ms-4 mt-2 fs-3">
										{{ decision.title}}
									</div>
									<div class="ms-4 mt-2 fs-3">
										{% if decision.owner.poster is not empty %}
											<img class="ms-2 profil-photo" src="{{ asset('build/images/' ~ decision.owner.poster) }}" alt="">
										{% else %}
											<i class="fs-5 p-2 rounded-5 bg-secondary fa-regular fa-owner"></i>
										{% endif %}
										<span class="fs-6 ms-3">
											par
											{{ decision.owner.firstname }}
											{{ decision.owner.lastname }}
										</span>
									</div>
								</div>
							</div>
							<div class="col-12 d-flex justify-content-center">
								<h1 class="mt-3 mb-5">Avis de l'expert</h1>
							</div>
							<div>
								{{ form_start(form) }}
								<div class="mt-3 mb-2">
									{{ form_row(form.comment) }}
								</div>
								<div class="d-flex justify-content-between align-items-center">
									<div class="w-100 text-center mb-2">
										{{ form_row(form.avispositif, { 'label': 'avis positif' }) }}
									</div>
									<div class="w-100 text-center mb-2">
										{{ form_row(form.avisnegatif, { 'label': 'avis n√©gatif' }) }}
									</div>
									{{ form_end(form) }}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
