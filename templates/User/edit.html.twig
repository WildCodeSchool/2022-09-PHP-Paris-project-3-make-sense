{% extends 'base.html.twig' %}

{% block body %}

    <div class="card container d-flex justify-content-center" style="max-width: 40rem;">
    <div class="card-header text-center text-bg-danger">
   <h3 class="mt-4">Modifier un utilisateur</h3>
  </div>
   <div class="card-body">
        {{ form_start(form) }}

             <div class="form-group">
               {{ form_label(form.firstname) }}
               {{ form_widget(form.firstname) }}   
               {{ form_errors(form) }}
            </div>  

             <div class="form-group">
               {{ form_label(form.lastname) }}
               {{ form_widget(form.lastname) }}  
                {{ form_errors(form) }}  
            </div>

             <div class="form-group">
               {{ form_label(form.email) }}
               {{ form_widget(form.email) }}  
                {{ form_errors(form) }}
            </div>  

              <div class="form-group">
               {{ form_label(form.roles) }}
               {{ form_widget(form.roles) }}
                {{ form_errors(form) }}
            </div> 

               {{ form_row(form.posterFile) }}  

             <div class="form-group">
               {{ form_label(form.phone) }}
               {{ form_widget(form.phone) }}
                {{ form_errors(form) }}
            </div>

            <div class = "form-group">
            {# {% set abc =0 %} #}
            {# {% set abc = 'form.expert0' %} #}
            {# {{ form_row(form.experts) }} #}

            {% for department in form.departments %}
                {{ form_label(department)}}
                {{ form_widget(department)}}
                <br>
            {% endfor %}

            </div>   

                {# {{ form_widget(form.submit, { 'label': 'Enregistrer' }) }}  #}
            
        {{ form_end(form) }}
         </div>
   {% endblock %}