{% extends 'base.html.twig' %}
{% block header %}
{% include 'partials/_navbar.html.twig' %}
{% endblock %}
{% block body %}
<div class="ticket container-fluid row row-cols-2 d-flex justify-content-around">
  {% for decision in decisions %}
	<div class="row mt-4">
		<div class="col-5 m-0 p-0 ">
			<div class="card border-dark mb-10" style="width: 40rem;">
				<div class="card-header fs-3 text-left card-bg-color text-white">{{ decision.status }}</div>
					<div class="card-body m-0 p-0">
						<div class="d-flex justify-content-between align-items-center border-2 border-bottom text-left">
							<div class="mt-2 mb-2">
								<img class="profil-photo" src="{{ asset('build/images/user.jpg') }}">
								<a class="ms-2 text-decoration-none" href="{{ path('decision_show', {'decision' : decision.id } ) }}">{{ decision.title |striptags|slice(0, 40) }}</a>
							</div>
					<div class=" mt-2 mb-2">
						<img class="like col-4 ms-2" src="{{ asset('build/images/thumbs-up-regular.png') }}">
						<a>{{ opinionLikes[loop.index0].like }}</a>
						<img class="like col-4 ms-2" src="{{ asset('build/images/thumbs-down-regular.png') }}">
						<a>{{ opinionLikes[loop.index0].dislike }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
        {% endfor %}		
{% endblock %}
