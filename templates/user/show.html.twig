{% extends 'base.html.twig' %}

{% block body %}


<div class="container-fluid">

	<div class="row mt-4">
    {% for decision in decisions %}

		<div class="col-6 d-flex justify-content-center m-0 p-0">

			<div class="card border-dark mb-3" style="width: 40rem;">
				<div class="card-header fs-3 text-center card-bg-color text-white">{{ dump(decision) }}</div>
				<div class="card-body m-0 p-0">
   
						<div class="d-flex justify-content-between align-items-center border-2 border-bottom">
							<div class="mt-2 mb-2">
								<img class="profil-photo" src="{{ asset('build/images/user.jpg') }}">
								<a class="ms-2 text-decoration-none" href="{{ path('decision_show', {'decision' : decision.id } ) }}">{{ decision.title }}</a>
							</div>
							<div class="mt-2 mb-2">
								<img class="like" src="{{ asset('build/images/thumbs-up-regular.png') }}">
									<a>{{ opinionLikes[1].like }}</a>
									<img class="like ms-2" src="{{ asset('build/images/thumbs-down-regular.png') }}">
									<a>{{ opinionLikes[1].dislike }}</a>
								</div>
							</div>
						</div>
				</div>
			</div>
		</div>
        {% endfor %}

					
{% endblock %}
