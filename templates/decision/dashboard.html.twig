									<div>
										<i class="fs-5 fa-regular fa-user rounded-5 bg-secondary p-2 ms-1"></i>
									</div>
									<div class="ms-2">
										<a class="text-decoration-none" href="#">{{ AllLastAccomplished[i].title  }}
											{{ AllLastAccomplished[i].id }}</a>
									</div>
								</div>

								<div class="mt-2 mb-2">
									<i class="fs-5 fa-regular fa-thumbs-up"></i>
									<a>({{ AllLastAccomplishedOpinion[i].like }})</a>
									<i class="fs-5 fa-regular fa-thumbs-down"></i>
									<a class="text-decoration-none me-2 text-dark">
										({{ AllLastAccomplishedOpinion[i].dislike }})
									</a>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			{% endif %}
		</div>
	</div>
</div>
