{% extends 'base.html.twig' %}

{% block title %}Decision - Show All !
{% endblock %}

{% block body %}
	{% include "partials/_navbar.html.twig" %}

	
		<div class="container mt-3">
			<div class="row ">
				{{ form_start(form) }}
				{{ form_widget(form) }}
				<div class="mt-2">
					<button id="search_button_decision" class="offset-5 col-2 btn text-white my-2 my-sm-0">Search</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>

		<div class="container mt-5">
			<div class="row d-flex justify-content-around  ">
			{% for decision in decisions %}
				{% include 'partials/_decision-card.html.twig' with { 'decision': decision } %} 
			{% endfor %}
			</div>
		</div>
		<div class="navigation d-flex justify-content-center mt-5">
			{{ knp_pagination_render(decisions) }}
		</div>
	
{% endblock %}
