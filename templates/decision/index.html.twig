{% extends 'base.html.twig' %}

{% block title %}Decision index{% endblock %}

{% block body %}
    <h1>Decision index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Impacts</th>
                <th>Benefits</th>
                <th>Risks</th>
                <th>LikeThreshold</th>
                <th>CreatedAt</th>
                {# <th>UpdatedAt</th>
                <th>StartedAt</th> #}
                <th>EndedAt</th>
                <th>CreatedBy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for decision in decisions %}
            <tr>
                <td>{{ decision.id }}</td>
                <td>{{ decision.title }}</td>
                <td>{{ decision.description }}</td>
                <td>{{ decision.impacts }}</td>
                <td>{{ decision.benefits }}</td>
                <td>{{ decision.risks }}</td>
                <td>{{ decision.likeThreshold }}</td>
                <td>{{ decision.createdAt ? decision.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ decision.updatedAt ? decision.updatedAt|date('Y-m-d') : '' }}</td>
                {# <td>{{ decision.startedAt ? decision.startedAt|date('Y-m-d') : '' }}</td>
                <td>{{ decision.endedAt ? decision.endedAt|date('Y-m-d') : '' }}</td> #}
                <td>{{ decision.CreatedBy }}</td>
                <td>
                    <a href="{{ path('app_decision_show', {'id': decision.id}) }}">show</a>
                    <a href="{{ path('app_decision_edit', {'id': decision.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_decision_new') }}">Create new</a>
{% endblock %}
